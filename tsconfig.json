{
  "compilerOptions": {
    "outDir": "./lib/esm",
    "allowJs": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "esModuleInterop": true,
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "src/**/*.css"
  ],
  "exclude": [
    "node_modules"
  ]
}