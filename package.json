    "cssnano": "^7.0.6",
    "postcss": "^8.4.49",
    "postcss-nesting": "^13.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
